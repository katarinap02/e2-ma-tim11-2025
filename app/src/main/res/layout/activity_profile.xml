<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.activities.ProfileActivity">

    <include
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Korisničko ime"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Titula: Početnik"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Level -->
            <TextView
                android:id="@+id/txtLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level: 1"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Statistike -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚔ Statistike"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/txtPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snaga (PP): 0" />

            <TextView
                android:id="@+id/txtXP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XP: 0" />

            <TextView
                android:id="@+id/txtCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novčići: 0" />

            <!-- Dostignuća -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏅 Dostignuća"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/txtBadgesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Broj bedževa: 0" />

            <LinearLayout
                android:id="@+id/layoutBadges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">
            </LinearLayout>

            <!-- Oprema -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oprema"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp" />

            <LinearLayout
                android:id="@+id/layoutEquipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
            </LinearLayout>

            <!-- QR kod -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📲 QR kod"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp" />

            <ImageView
                android:id="@+id/imgQrCode"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
