<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.activities.ProfileActivity">

    <include
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/korisni_ko_ime"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titula_po_etnik"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Level -->
            <TextView
                android:id="@+id/txtLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_1"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Statistike -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/statistike"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/txtPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/snaga_pp_0" />

            <TextView
                android:id="@+id/txtXP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xp_0" />

            <TextView
                android:id="@+id/txtCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nov_i_i_0" />

            <!-- Dostignuća -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dostignu_a"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/txtBadgesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/broj_bed_eva_0" />

            <LinearLayout
                android:id="@+id/layoutBadges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">
            </LinearLayout>

            <!-- Oprema -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/oprema"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp" />

            <LinearLayout
                android:id="@+id/layoutEquipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
            </LinearLayout>

            <!-- QR kod -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qr_kod"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp" />

            <ImageView
                android:id="@+id/imgQrCode"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/promeni_lozinku" />

            <TextView
                android:id="@+id/txtStatisticsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/statistike2"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp"/>

            <TextView
                android:id="@+id/txtActiveDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/broj_uzastopnih_aktivnih_dana_0"
                android:paddingTop="4dp"/>

            <TextView
                android:id="@+id/txtChart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pregled_zadataka"
                android:paddingTop="4dp"/>


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartTasks"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="12dp"/>


            <!-- Broj završenih zadataka po kategoriji -->
            <TextView
                android:id="@+id/txtTasksByCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zavr_eni_zadaci_po_kategoriji"
                android:paddingTop="4dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChartTasksByCategory"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/txtTaskByDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prosecna_tezina_zadataka"
                android:paddingTop="4dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChartTaskDifficulty"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"/>


            <TextView
                android:id="@+id/txtLongestStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/najdu_i_niz_uspe_no_ura_enih_zadataka_0_dana"
                android:paddingTop="8dp"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
