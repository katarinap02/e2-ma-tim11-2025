<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.HomeScreenActivity">

    <include
        layout="@layout/navbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dobrodosli_hs"
            android:textSize="20sp"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnAllProfiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/svi_profili"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mojProfil"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnAddEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dodaj_izmeni_zadatke"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prikazi_kategorije"
            android:layout_marginBottom="16dp"/>


        <Button
            android:id="@+id/btnLevelInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/napredak_kroz_nivoe"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prodavnica"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prijatelji"
            android:layout_marginBottom="16dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>