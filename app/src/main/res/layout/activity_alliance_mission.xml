<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boss_arena_background1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Naslov misije -->
        <TextView
            android:id="@+id/tvSpecialMissionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specijalna misija"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"/>

        <!-- Boss informacije -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#33000000"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvBossName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boss ime"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- HP Boss-a -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/pbBossHP"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:progressTint="@color/boss_hp_color"
                    android:progressBackgroundTint="@color/hp_background"
                    android:progress="100"
                    android:max="100" />

                <TextView
                    android:id="@+id/tvBossHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 / 200 HP"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:minWidth="110dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Slika Boss-a -->
        <ImageView
            android:id="@+id/ivBoss"
            android:layout_width="250dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_marginBottom="30dp"
            android:src="@drawable/zmaj" />

        <!-- Napredak saveza -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#33000000">

            <!-- Tekst i vrednost u jednom redu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAllianceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Napredak saveza:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAllianceProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="0 / 100"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>


            <!-- Progress bar ispod -->
            <ProgressBar
                android:id="@+id/pbAllianceProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:progressTint="@color/boss_hp_color"
                android:progressBackgroundTint="@color/hp_background"
                android:progress="0"
                android:max="100"/>
        </LinearLayout>


        <!-- Napredak članova -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Napredak članova"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMembersProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</ScrollView>