<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/boss_arena_background1"
    android:padding="16dp">

    <!-- Naslov -->
    <TextView
        android:id="@+id/tvBossTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/borba_sa_bosom"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"/>

    <!-- Battle Info Section -->
    <LinearLayout
        android:id="@+id/layoutBattleInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Hit Chance i Preostali Napadi -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvHitChance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sansa_za_pogodak"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvAttacksLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_5_5_napada"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Active Equipment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <!-- Tekst iznad opreme -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aktivna_oprema"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:gravity="center"/>

            <!-- Layout za slike opreme -->
            <LinearLayout
                android:id="@+id/layoutActiveEquipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bars i Boss -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- PP Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="4dp">

            <ProgressBar
                android:id="@+id/pbUserPP"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:progressTint="@color/user_pp_color"
                android:progressBackgroundTint="@color/pp_background"
                android:progress="100"
                android:max="100" />

            <TextView
                android:id="@+id/tvUserPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_150_pp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:minWidth="50dp" />
        </LinearLayout>

        <!-- Boss HP Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="8dp">

            <ProgressBar
                android:id="@+id/pbBossHP"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:progressTint="@color/boss_hp_color"
                android:progressBackgroundTint="@color/hp_background"
                android:progress="100"
                android:max="100" />

            <TextView
                android:id="@+id/tvBossHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_200_200_hp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:minWidth="60dp" />
        </LinearLayout>

        <!-- Boss Image -->
        <ImageView
            android:id="@+id/ivBoss"
            android:layout_width="351dp"
            android:layout_height="370dp"
            android:scaleType="centerInside"
            android:layout_marginStart="30dp"
            android:src="@drawable/boss_idle2" />
    </LinearLayout>

    <!-- Dugme -->
    <Button
        android:id="@+id/btnAttack"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/napad"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="32dp"
        android:elevation="4dp" />
</LinearLayout>
